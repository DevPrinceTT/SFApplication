<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")

    <style>
        body {
            padding-top: 0px !important;
            background-color: #fafafa;
        }

        h3 {
            color: #7b909f;
        }

        div.container {
            margin-left: 0px;
            margin-right: 0px;
            width: 100%;
            /*padding-left: 0px;
            padding-right: 0px;*/
        }

        div#popup-container.show-tool {
            display: block;
        }

        div#popup-container:not(.show-tool) {
            display: none;
        }

        div.total-container {
            line-height: 4;
            text-align: right;
            font-size: 14px;
            color: #7b909f;
        }

            div.total-container span.total-label {
                font-weight: 600;
            }

        th {
            background-color: #7b909f;
            color: #fff;
            text-align: center;
            font-size: 12px;
            padding: 2px !important;
        }

        .footer {
            position: fixed;
            bottom: 0;
            /*width: 100%;*/
            height: 60px;
            line-height: 60px;
            border-top: #ccc solid 1px;
            background-color: transparent;
            left: 0;
            right: 0;
            padding-left: 15px;
            padding-right: 15px;
        }

            .footer > .container {
                color: #fff;
                /*padding-right: 15px;
            padding-left: 15px;*/
            }
    </style>
</head>
<body>
    <div class="container body-content @ViewBag.FullWidth" ng-app="SFApplication">
        @RenderBody()
        @RenderSection("Savebar", required: false)
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
