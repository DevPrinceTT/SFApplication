@model SFApplication.ViewModels.mdl_Forecast
@{
    ViewBag.HideLayout = true;
    ViewBag.Title = "Create Forecast";
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}
<div ng-controller="ForecastController">
    <div class="{{ 'show-tool' }} container popup-container" id="popup-container">
        <div class="row">
            <div class="col-xs-8">
                <h3>Create Forecast</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Create Forecast</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 input">
                @Html.LabelFor(d => d.Year)
                @Html.TextBoxFor(d => d.Year, new { @class = "form-control" })
            </div>
        </div>
        <div class="row save-bar">
            <div class="col-md-6">
                <button class="btn btn-default">Cancel</button>
                <button class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="row">
            <div class="col-xs-3" style="float:right; text-align:right;">
                <button class="btn btn-default" ng-click="closePopup()">Cancel</button>
                <button class="btn btn-success" ng-click="saveDetails()">Save</button>
            </div>
        </div>
    </footer>
</div>

@section Scripts{
    <script>
        window.onunload = function (e) {
            opener.callback(); 
        };
    </script>
}
